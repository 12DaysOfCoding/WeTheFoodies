{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "warn",
            { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
        ],
        "no-const-assign": [
            "error"
        ],
        "no-extra-semi": [
            "warn"
        ],
        "semi-spacing": [
            "error", 
            {"before": false, "after": true}
        ],
        "curly": [
            "warn",
            "multi"
        ],
        "eqeqeq": [
            "warn",
            "smart"
        ],
        "no-extra-boolean-cast": [
            "warn"
        ],
        "no-redeclare": [
            "warn"
        ]
    }
}
